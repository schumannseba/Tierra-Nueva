                        })

                    sumarTotal();


                },
                error: function (error) {
                    $("productos-carrito").LoadingOverlay("hide");
                },
                beforeSend: function () {
                    $("productos-carrito").LoadingOverlay("show");
                }
            })


            ListarProvincia()
        })

        function ListarProvincia() {

            $("<option>").attr({ "value": "0", "disabled":"disabled", "selected" : "true" }).text("Seleccionar").appendTo("#cboprovincia")


            jQuery.ajax({
                url: '@Url.Action("ObtenerProvincia", "Tienda")',
                type: "POST",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    if (data.lista != null) {

                        $.each(data.lista, function (i, item) {

                            $("<option>").attr({ "value": item.IdProvincia }).text(item.Descripcion).appendTo("#cboprovincia")

                        })

                        ListarCiudad();
                        }
                        }

            })
        }

        $("#cboprovincia").on("change", function () {
            ListarCiudad();
        })

        function ListarCiudad() {

            $("#cbociudad").html("")

            $("<option>").attr({ "value": "0", "disabled":"disabled", "selected" : "true" }).text("Seleccionar").appendTo("#cbociudad")


            jQuery.ajax({
                url: '@Url.Action("ObtenerCiudad", "Tienda")',
                type: "POST",
                data: JSON.stringify({ IdProvincia: $("#cboprovincia option:selected").val() }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    if (data.lista != null) {

                        $.each(data.lista, function (i, item) {

                            $("<option>").attr({ "value": item.IdCiudad }).text(item.Descripcion).appendTo("#cbociudad")

                        })
                        }
                        }

            })
        }

        function sumarTotal() {

            var sumaTotal = parseFloat(0)

            $("input.input-cantidad").each(function (i) {
                var precio = $(this).data("oProducto").CostoActualizado;
                var cantidad = parseFloat($(this).val())
                var subtotal = precio * cantidad;

                sumaTotal += subtotal;
            })

            $("#total").text(sumaTotal.toFixed(2))
            $("#total").data("sumatotal",sumaTotal)
        }

        $(document).on("click", ".btn-sumar", function () {
            var div_contenedor = $(this).parent("div.d-flex");

            var input_cantidad = $(div_contenedor).find("input.input-cantidad");

            var btn = $(this)

            var idproducto = $(input_cantidad).data("oProducto").IdProducto;

            jQuery.ajax({
                url: '@Url.Action("OperacionCarrito", "Tienda")',
                type: "POST",
                data: JSON.stringify({ idproducto: idproducto, sumar :true}),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    $(btn).LoadingOverlay("hide")


                    if (data.respuesta) {

                        var cantidad = parseInt($(input_cantidad).val()) + 1;
                        $(input_cantidad).val(cantidad)
                        sumarTotal()


                    } else {
                        swal("",data.mensaje,"warning")
                    }
                },
                beforeSend: function () {
                    $(btn).LoadingOverlay("show")

                },
                error: function (error) {

                    $(btn).LoadingOverlay("hide")
                },


                })
        })



          $(document).on("click", ".btn-restar", function () {
            var div_contenedor = $(this).parent("div.d-flex");

            var input_cantidad = $(div_contenedor).find("input.input-cantidad");

            var btn = $(this)

              var idproducto = $(input_cantidad).data("oProducto").IdProducto;

              var cantidad = parseInt($(input_cantidad).val()) - 1;

              if (cantidad >= 1) {

                  jQuery.ajax({
                      url: '@Url.Action("OperacionCarrito", "Tienda")',
                      type: "POST",
                      data: JSON.stringify({ idproducto: idproducto, sumar: false }),
                      dataType: "json",
                      contentType: "application/json; charset=utf-8",
                      success: function (data) {

                          $(btn).LoadingOverlay("hide")


                          if (data.respuesta) {


                              $(input_cantidad).val(cantidad)
                              sumarTotal()


                          } else {
                              swal("", data.mensaje, "warning")
                          }
                      },

                      beforeSend: function () {
                          $(btn).LoadingOverlay("show")

                      },
                      error: function (error) {

                          $(btn).LoadingOverlay("hide")
                      }


                  })
              }
          })

            $(document).on("click", ".btn-eliminar", function () {


              var idproducto = $(this).data("idproducto");

                var card_producto = $(this).parents("div.card-producto");



                  jQuery.ajax({
                      url: '@Url.Action("EliminarCarrito", "Tienda")',
                      type: "POST",
                      data: JSON.stringify({ idproducto: idproducto}),
                      dataType: "json",
                      contentType: "application/json; charset=utf-8",
                      success: function (data) {




                          if (data.respuesta) {


                              card_producto.remove();

                              MostrarCantidadCarrito();

                              sumarTotal();

                          } else {
                              swal("", data.mensaje, "warning")
                          }
                      }




                  })

            })

        function RealizarPago() {
            if (parseInt($("#cantidadcarrito").text()) == 0) {

                swal("", "No existe productos en el carrito", "warning");
                return

            }

            if ($("#cbociudad").val() == null || $("#txtnombrecontacto").val() == "" || $("#txtdireccion").val() == "" || $("#txttelefono").val() == "") {
                swal("", "Debe completar los datos de detalle envio", "warning");
                return
            }

            var venta = {
                TotalProducto: $("input.input-cantidad").length,
                MontoTotal: 0,
                Contacto: $("#txtnombrecontacto").val(),
                IdCiudad: $("#cbociudad").val(),
                Telefono: $("#txttelefono").val(),
                Direccion: $("#txtdireccion").val()

            }

            var lista_carrito = []

            $("input.input-cantidad").each(function (i) {

                var producto = $(this).data("oProducto");
                var cantidad = parseFloat($(this).val())


                lista_carrito.push({
                    oProducto: producto,
                    Cantidad : cantidad

                })



            })

             jQuery.ajax({
                      url: '@Url.Action("ProcesarPago", "Tienda")',
                         type: "POST",
                         data: JSON.stringify({ oListaCarrito: lista_carrito, oPedido : venta }),
                        dataType: "json",
                           contentType: "application/json; charset=utf-8",
                 success: function (data) {

                     if (data.Status) {
                         window.location.href = data.Link;

                     }
                     else {
                         swal("", "Vuelva a intentarlo más tarde", "warning");
                     }

                 },
                 beforeSend: function () {
                     $.LoadingOverlay("show")

                 },
                 error: function (error) { $.LoadingOverlay("show") },

                 })
        }

    </script>
    
    
